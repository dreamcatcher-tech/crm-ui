{
  "imports": {
    "@artifact/api": "jsr:@artifact/api@^0.0.18",
    "@artifact/context": "jsr:@artifact/context@^0.0.28"
  },
  "fmt": {
    "singleQuote": true,
    "semiColons": false,
    "lineWidth": 80
  },
  "lint": {
    "rules": {
      "exclude": ["no-sloppy-imports"]
    }
  },
  "unstable": ["sloppy-imports"],
  "compilerOptions": {
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "jsxImportSourceTypes": "@types/react"
  }
}
